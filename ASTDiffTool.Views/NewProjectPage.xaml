<UserControl x:Class="ASTDiffTool.Views.NewProjectPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ASTDiffTool.Views"
             xmlns:controls="clr-namespace:ASTDiffTool.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="{StaticResource EditorBackgroundColor}" 
            CornerRadius="5"
            Padding="10"
            BorderThickness="0"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Width="600">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="45" ShadowDepth="5" Opacity="0.5" BlurRadius="10" />
        </Border.Effect>

        <StackPanel>
            <!--File loading controls-->
            <controls:LoadFilesControl />

            <!--Project settings controls-->
            <controls:ProjectSettingsControl />
        </StackPanel>

    </Border>
</UserControl>
